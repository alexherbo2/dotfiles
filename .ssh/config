# OpenSSH
# https://openssh.com
# https://man.openbsd.org/ssh_config

Host *
  IgnoreUnknown UseKeychain # macOS-only

  # Authentication
  UseKeychain yes
  AddKeysToAgent yes

  # SSH multiplexing
  ControlMaster auto
  ControlPath ~/.ssh/control_masters/%r@%h:%p
  ControlPersist yes

Host host
  HostName 192.168.64.1
  User taupiqueur

Host guest
  HostName 192.168.64.3
  User taupiqueur
