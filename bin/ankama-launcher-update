#!/bin/sh

mkdir -p ~/games/linux/ankama/launcher
cd ~/games/linux/ankama/launcher
rm -f 'Ankama Launcher-Setup-x86_64.AppImage'
curl 'https://launcher.cdn.ankama.com/installers/production/Ankama%20Launcher-Setup-x86_64.AppImage' --output 'Ankama Launcher-Setup-x86_64.AppImage'
chmod +x 'Ankama Launcher-Setup-x86_64.AppImage'
