#!/bin/sh

# Rails
nix-shell --packages sqlite postgresql_12 yarn zlib libffi --run 'gem install rails'
nix-shell --packages sqlite --run 'gem install sqlite3'
nix-shell --packages postgresql_12 --run 'gem install pg'

# REPL
gem install pry
gem install byebug
gem install pry-byebug

# Tools
gem install rspec
gem install rubocop
gem install solargraph

# Seed
gem install faker
