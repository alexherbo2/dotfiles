#!/bin/sh

# Default values for the `light` and `night` parameters
light=${1:-30}
night=${2:-0}

round() {
  echo "($1 + 0.5) / 1" | bc
}

# Get brightness
brightness=$(light -G)

# Set or unset room
if test $(echo "$(round $brightness) > $(round $night)" | bc) -eq 1; then
  brightness=$night
else
  brightness=$light
fi

# Set brightness
light -S "$brightness"
