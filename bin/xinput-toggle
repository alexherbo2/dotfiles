#!/bin/sh

device=$1

case $device in
  keyboard)
    name='AT Translated Set 2 keyboard'
    master=3
    ;;
  touchpad)
    name='SynPS/2 Synaptics TouchPad'
    master=2
    ;;
  *)
    echo 'No such device' > /dev/stderr
    exit 1
    ;;
esac

identifier=$(
  xinput |
  pcregrep -o1 "$name.+id=([0-9]+)"
)

if xinput | grep -q "â†³ $name"; then
  echo Float
  xinput float $identifier
else
  echo Reattach
  xinput reattach $identifier $master
fi
