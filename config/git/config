[user]
  name = Mathieu Ablasou
  email = taupiqueur.kanto@gmail.com

[core]
  pager = delta
  editor = kak

[pull]
  ff = only

[push]
  default = current
  followTags = true

[commit]
  verbose = true

[checkout]
  defaultRemote = origin

[log]
  date = relative

[alias]

  w = add
  r = reword
  p = pick
  u = unstage
  D = discard
  rb = rollback
  st = status
  b = branch
  d = diff
  ci = commit
  cm = commit --message
  ct = !date '+%F %T' | git commit --file=-
  co = checkout
  cb = checkout -b
  l = log
  L = log --graph
  bd = branch-delete
  bdr = branch-delete-remote

  ; Information
  root = rev-parse --show-toplevel

  ; Listing
  tags = tag --list
  branches = branch --all
  remotes = remote --verbose

  ; Commit
  reword = commit --amend
  pick = commit --amend --no-edit

  ; Undo
  unstage = restore --staged
  discard = restore --staged --worktree
  rollback = reset --hard

  ; Merge
  ; Explicit is better than implicit.
  ; If we want to merge, we should do so ourselves.
  ; •     │ o
  ;  \    │ o
  ;   o   │ o
  ;   o   │ •
  ;   o   │ •
  ;  /    │
  ; •     │
  ; •     │
  ; no-ff │ ff-only
  update = merge --ff-only
  join = merge --no-ff

  ; Stash
  unstash = stash pop
  stashes = stash list

  ; Branch
  branch-delete = branch --delete --force
  branch-delete-remote = push origin --delete
