# Highlighters â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

# Hook on filetype is required
hook global WinSetOption filetype=.* %{
  add-highlighter window/whitespace regex '\h+' "0:%opt{background}"
  add-highlighter window/newline regex '\n+' "0:%opt{dimmed_background}"
  add-highlighter window/trailing-whitespaces regex '\h+$' 0:red
  add-highlighter window/non-breaking-space regex 'Â +' 0:red
  add-highlighter window/not-two-spaces-after-sentence regex '[?!.â€¦]\K\h(\h{2,})?(?=\w)' 0:red
  add-highlighter window/two-spaces-after-sentence regex '[?!.â€¦]\K\h{2}(?=\w)' 0:green
  add-highlighter window/multiple-whitespaces-after-word regex '\w\K\h{2,}' 0:red
  add-highlighter window/apostrophe regex '\w\K''(?=\w)' 0:red
  add-highlighter window/cesure regex 'â€+' 0:red
  add-highlighter window/range-of-values regex 'â€‘+' 0:blue
  add-highlighter window/u+2013 regex 'â€“+' 0:green
  add-highlighter window/u+2014 regex 'â€”+' 0:green+b
  add-highlighter window/u+2015 regex 'â€•+' 0:red
  add-highlighter window/math regex '[âˆ’Ã—]+' 0:cyan
  add-highlighter window/opening-quotation-mark regex '[â€œâ€˜]+' 0:cyan
  add-highlighter window/closing-quotation-mark regex 'â€+' 0:cyan+u
}

# Plugins â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€

