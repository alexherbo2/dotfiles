# Preamble ─────────────────────────────────────────────────────────────────────

prepend_to_path() {
  export PATH=$1:$PATH
}

# Paths ────────────────────────────────────────────────────────────────────────

# macOS
# Homebrew – https://brew.sh
[ -x /opt/homebrew/bin/brew ] && eval "$(/opt/homebrew/bin/brew shellenv)"

prepend_to_path ~/configuration/bin
prepend_to_path ~/configuration/local/bin
prepend_to_path ~/.local/bin

# Projects
# Krabby – https://krabby.netlify.app
prepend_to_path ~/projects/krabby/bin

# kakoune.cr – https://github.com/alexherbo2/kakoune.cr
prepend_to_path ~/projects/kakoune.cr/bin
prepend_to_path ~/projects/kakoune.cr/share/kcr/commands/edit
prepend_to_path ~/projects/kakoune.cr/share/kcr/commands/fzf

# Batch – https://github.com/alexherbo2/batch
prepend_to_path ~/projects/batch/bin
prepend_to_path ~/projects/batch/share/batch/scripts
prepend_to_path ~/projects/batch.kak/bin

# Chronic – https://github.com/alexherbo2/chronic
prepend_to_path ~/projects/chronic/bin

# Tools – https://github.com/alexherbo2/{tool}
prepend_to_path ~/projects/snippets/bin
prepend_to_path ~/projects/launcher/bin
prepend_to_path ~/projects/password/bin

# Tools – https://github.com/alexherbo2/{tool}
prepend_to_path ~/projects/git-tools/bin
prepend_to_path ~/projects/ffmpeg-tools/bin
prepend_to_path ~/projects/sway-tools/bin

# Tools
prepend_to_path ~/repositories/github.com/facundoolano/rpg-cli/target/release
prepend_to_path ~/repositories/github.com/mawww/kakoune/src
prepend_to_path ~/repositories/github.com/kak-lsp/kak-lsp/target/release
prepend_to_path ~/repositories/github.com/helix-editor/helix/target/release
prepend_to_path ~/repositories/github.com/alacritty/alacritty/target/release
prepend_to_path ~/repositories/github.com/nushell/nushell/target/release
prepend_to_path ~/repositories/github.com/Canop/broot/target/release
prepend_to_path ~/repositories/github.com/sayanarijit/xplr/target/release
prepend_to_path ~/repositories/github.com/topisani/sidetree/target/release
prepend_to_path ~/repositories/github.com/zellij-org/zellij/target/release
prepend_to_path ~/repositories/github.com/austinjones/tab-rs/target/release
prepend_to_path ~/repositories/github.com/Nukesor/pueue/target/release
prepend_to_path ~/repositories/github.com/extrawurst/gitui/target/release
prepend_to_path ~/repositories/github.com/Luminarys/synapse/target/release
prepend_to_path ~/repositories/github.com/Blacksmoke16/oq/bin

# Packages
prepend_to_path ~/.cargo/bin
ruby_gem_user_dir=$(ruby -e 'puts Gem.user_dir')
prepend_to_path "$ruby_gem_user_dir/bin"
prepend_to_path ~/.rvm/bin
prepend_to_path node_modules/.bin
prepend_to_path ~/.npm-packages/bin
prepend_to_path ~/.yarn/bin
prepend_to_path ~/go/bin
prepend_to_path ~/.cabal/bin

# Environment variables ────────────────────────────────────────────────────────

# Desktop environment
# https://kde.org
#
# Note: KDE apps need this for non-KDE desktops.
export XDG_CURRENT_DESKTOP='kde'

# Current shell
# Useful to open a new terminal in Kakoune.
# Use the latest version of Nushell.
# export SHELL=~/repositories/github.com/nushell/nushell/target/release/nu

# Manual paths
export MANPATH=~/.npm-packages/share/man:

# Applications
export EDITOR='kcr edit'
export BROWSER='chromium'
export KAKOUNE_POSIX_SHELL=/bin/dash
export MANPAGER='sh -c '"'"'col -b -x | kak -e "set-option buffer filetype man"'"'"' --'

# ripgrep
export RIPGREP_CONFIG_PATH=~/.config/ripgrep/rc

# fzf
export FZF_DEFAULT_OPTS='--multi --layout=reverse --preview-window=down:60%'
