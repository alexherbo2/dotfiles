# OpenSSH
# https://openssh.com
# https://man.openbsd.org/ssh_config

Host *
  IgnoreUnknown UseKeychain # macOS-only

  # Authentication
  UseKeychain yes
  AddKeysToAgent yes

  # SSH multiplexing
  ControlMaster auto
  ControlPath ~/.cache/ssh/sessions/%r@%h:%p
  ControlPersist yes

Host mawww
  HostName tamiok.kakoune.org
  User taupiqueur

Host paris8
  HostName bocal.cs.univ-paris8.fr
  User ili900

Host alexherbo2.github.com
  HostName github.com
  User git
  IdentityFile ~/.ssh/id_ed25519_alexherbo2
  IdentitiesOnly yes
