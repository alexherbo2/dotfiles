# Configure ControlMaster for multiplexing
# https://man.openbsd.org/ssh_config#ControlMaster
#
# macOS-only: `UseKeychain` (see ssh_config(5) for details).
Host *
  IgnoreUnknown UseKeychain
  UseKeychain yes
  ControlMaster auto
  ControlPath ~/.cache/ssh/sessions/%r@%h:%p
  ControlPersist yes

Host mawww
  User taupiqueur
  HostName tamiok.kakoune.org

Host paris8
  User ili900
  HostName bocal.cs.univ-paris8.fr

Host git.trustpair.fr
  User mablasou
  HostName git.trustpair.fr
  IdentityFile ~/.ssh/id_rsa_trustpair

Host work
  User mablasou
  HostName mathieus-mbp
